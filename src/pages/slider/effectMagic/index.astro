---
import Layout from '@/layouts/slider/effectMagic/Layout.astro';
import estrados from '@/data/slider/effectMagic/estrados.json';
import notas from '@/data/slider/effectMagic/notas.json';
import { truncateString } from '@/js/functios.js';

const jsonEstrados = estrados.map((item) => ({
  tipo: `Estrados - ${item.tipo_doc}`,
  fecha: item.fecha_pub,
  titulo: item.descripcion,
  imagen: '/slider/effectMagic/estrados.webp',
  descripcion: '',
  url: item.archivo,
  textoboton: `Ver ${item.tipo_doc}`,
}));

const jsonNotas = notas.map((item) => ({
  tipo: item.type,
  fecha: item.date,
  titulo: item.title,
  imagen: item.image,
  descripcion: item.description,
  url: item.url,
  textoboton: 'Ver Noticia',
}));

const jsonFinal = jsonEstrados.concat(jsonNotas);
const jsonFinalminiature = JSON.parse(JSON.stringify(jsonFinal));
const firtElement = jsonFinalminiature.shift();

jsonFinalminiature.push(firtElement);
---

<Layout title="Slider con Efecto MÃ¡gico">
  <main>
    <header class="header">
      <nav>
        <a class="header__link" href="">Home</a>
        <a class="header__link" href="">Contacts</a>
        <a class="header__link" href="">Info</a>
      </nav>
    </header>

    <div class="carousel">
      <div class="carousel-list">
        {
          jsonFinal.map(
            ({ tipo, titulo, imagen, descripcion, url, textoboton }) => (
              <div class="carousel-list__item">
                <img class="carousel-list__img" src={imagen} alt={titulo} />
                <div class="carousel-list__content">
                  <div class="carousel-list__author">{tipo}</div>
                  <div class="carousel-list__title">{titulo}</div>
                  <div class="carousel-list__des">{descripcion}</div>
                  <div class="carousel-list__buttons">
                    <a href={url} target="_blank">
                      {textoboton}
                    </a>
                  </div>
                </div>
              </div>
            ),
          )
        }
      </div>

      <div class="carousel-thumbnail">
        {
          jsonFinalminiature.map(({ titulo, imagen }) => (
            <div class="carousel-thumbnail__item">
              <img class="carousel-thumbnail__img" src={imagen} alt={titulo} />
              <div class="carousel-thumbnail__content">
                <div class="carousel-thumbnail__title">
                  {truncateString(titulo, 50)}
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="carousel-arrows">
        <button id="prev">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
              fill-rule="evenodd"
              d="M11.78 5.22a.75.75 0 0 1 0 1.06L8.06 10l3.72 3.72a.75.75 0 1 1-1.06 1.06l-4.25-4.25a.75.75 0 0 1 0-1.06l4.25-4.25a.75.75 0 0 1 1.06 0Z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
        <button id="next">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-5 h-5"
          >
            <path
              fill-rule="evenodd"
              d="M8.22 5.22a.75.75 0 0 1 1.06 0l4.25 4.25a.75.75 0 0 1 0 1.06l-4.25 4.25a.75.75 0 0 1-1.06-1.06L11.94 10 8.22 6.28a.75.75 0 0 1 0-1.06Z"
              clip-rule="evenodd"></path>
          </svg>
        </button>
      </div>

      <div class="carousel-time"></div>
    </div>
  </main>
</Layout>

<script>
  let nextDom = document.getElementById('next');
  let prevDom = document.getElementById('prev');
  let carouselDom = document.querySelector('.carousel');
  let listItemDom = document.querySelector('.carousel-list');
  let thumbnailDom = document.querySelector('.carousel-thumbnail');

  nextDom.onclick = function () {
    showSlider('next');
  };

  prevDom.onclick = function () {
    showSlider('prev');
  };

  let timeRunning = 1000;
  let timeAutoNext = 7000;
  let runTimeOut;
  let runAutoRun = setTimeout(() => {
    nextDom.click();
  }, timeAutoNext);

  function showSlider(type) {
    let itemSlider = document.querySelectorAll('.carousel-list__item');
    let itemThumbnail = document.querySelectorAll('.carousel-thumbnail__item');

    if (type === 'next') {
      listItemDom.appendChild(itemSlider[0]);
      thumbnailDom.appendChild(itemThumbnail[0]);
      carouselDom.classList.add('next');
    } else {
      let positionLastItem = itemSlider.length - 1;
      listItemDom.prepend(itemSlider[positionLastItem]);
      thumbnailDom.prepend(itemThumbnail[positionLastItem]);
      carouselDom.classList.add('prev');
    }

    clearTimeout(runTimeOut);
    runTimeOut = setTimeout(() => {
      carouselDom?.classList.remove('next');
      carouselDom?.classList.remove('prev');
    }, timeRunning);

    clearTimeout(runAutoRun);
    runAutoRun = setTimeout(() => {
      nextDom.click();
    }, timeAutoNext);
  }
</script>

<style>
  @custom-media --md (max-width: 678px);

  .header {
    width: 1140px;
    max-width: 80%;
    margin: auto;
    height: 50px;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 100;

    nav {
      display: flex;
    }

    &__link {
      text-decoration: none;
      color: #eee;
      margin-right: 40px;
    }
  }

  .carousel {
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    margin-top: -50px;
    position: relative;
  }
  .carousel.next
    .carousel-list
    .carousel-list__item:nth-child(1)
    .carousel-list__img {
    width: 150px;
    height: 200px;
    position: absolute;
    left: 50%;
    bottom: 50px;
    border-radius: 20px;
    animation: showImage 0.5s linear 1 forwards;
  }
  .carousel.next .carousel-thumbnail {
    transform: translateX(150px);
    animation: transformThumbnail 0.5s linear 1 forwards;

    .carousel-thumbnail__item:nth-last-child(1) {
      width: 0;
      overflow: hidden;
      animation: showThumbnail 0.5s linear 1 forwards;
    }
  }

  .carousel.next .carousel-arrows button,
  .carousel.prev .carousel-arrows button {
    pointer-events: none;
  }

  .carousel.next > .carousel-time,
  .carousel.prev > .carousel-time {
    animation: runningTime 7s linear 1 forwards;
  }

  .carousel.prev .carousel-list .carousel-list__item:nth-child(2) {
    z-index: 2;

    .carousel-list__img {
      position: absolute;
      bottom: 0;
      left: 0;
      animation: outImage 0.5s linear 1 forwards;
    }

    .carousel-list__author,
    .carousel-list__title,
    .carousel-list__topic,
    .carousel-list__des,
    .carousel-list__buttons {
      animation: contentOut 1.5s linear 1 forwards;
    }
  }

  .carousel.prev .carousel-thumbnail .carousel-thumbnail__item:nth-child(1) {
    width: 0;
    overflow: hidden;
    opacity: 0;
    animation: showThumbnail 0.5s linear 1 forwards;
  }

  .carousel-list {
    &__item {
      position: absolute;
      //top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      inset: 0 0 0 0;

      &:nth-child(1) {
        z-index: 1;

        .carousel-list__author,
        .carousel-list__title,
        .carousel-list__topic,
        .carousel-list__des,
        .carousel-list__buttons {
          transform: translateY(50px);
          filter: blur(20px);
          opacity: 0;
          animation: showContent 0.5s 1s linear 1 forwards;
        }

        .carousel-list__title {
          animation-delay: 1s;
        }
        .carousel-list__topic {
          animation-delay: 1.2s;
        }
        .carousel-list__dec {
          animation-delay: 1.4s;
        }
        .carousel-list__buttons {
          animation-delay: 1.5s;
        }
      }
    }

    &__img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: brightness(0.5);
    }

    &__content {
      position: absolute;
      top: 20%;
      width: 1140px;
      max-width: 80%;
      left: 50%;
      transform: translate(-50%);
      padding-right: 30%;
      box-sizing: border-box;
      color: #fff;
      text-shadow: 0 5px 10px #0004;

      @media (--md) {
        padding-right: 0;
      }
    }

    &__author {
      font-weight: bold;
      letter-spacing: 10px;
      background-color: black;
      padding: 0.05rem 0.5rem;
      display: inline;
    }
    &__title,
    &__topic {
      font-weight: bold;
      font-size: 2em;
      list-style: 1.3em;
    }

    &__title {
      margin-top: 0.75rem;
      @media (--md) {
        font-size: 30px;
      }
    }

    &__topic {
      color: #f1683a;
      @media (--md) {
        font-size: 35px;
      }
    }
    &__des {
      font-size: 1rem;
      font-weight: 400;
      padding-top: 1rem;
      padding-bottom: 1rem;
    }

    &__buttons {
      display: flex;
      //grid-template-columns: repeat(2, 130px);
      //grid-template-rows: 40px;
      gap: 5px;
      margin-top: 20px;

      a {
        border: none;
        background-color: #eee;
        letter-spacing: 3px;
        font-family: Poppins;
        font-weight: 500;
        color: #555;
        padding: 0.5rem 1rem;
        text-decoration: none;
      }
    }
  }

  .carousel-thumbnail {
    position: absolute;
    bottom: 50px;
    left: 50%;
    width: max-content;
    z-index: 100;
    display: flex;
    gap: 20px;

    &__item {
      width: 150px;
      height: 220px;
      flex-shrink: 0;
      position: relative;
    }

    &__img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 20px;
    }

    &__content {
      position: absolute;
      bottom: 0;
      background-image: linear-gradient(
        rgba(0, 0, 0, 0),
        rgba(0, 0, 0, 0.25),
        rgba(0, 0, 0, 0.5),
        rgba(0, 0, 0, 0.5)
      );
      display: block;
      max-width: 150px;
      padding: 1.5rem 0.5rem 0.5rem 0.5rem;
      border-bottom-left-radius: 20px;
      border-bottom-right-radius: 20px;
    }

    &__title {
      font-weight: 400;
      text-align: center;
      min-width: calc(150px -1rem);
    }
    &__dec {
      font-weight: 300;
    }
  }

  .carousel-arrows {
    position: absolute;
    top: 80%;
    right: 52%;
    width: 300px;
    max-width: 30%;
    display: flex;
    gap: 10px;
    align-items: center;

    button {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      background-color: #eee4;
      border: none;
      color: #fff;
      transition: 0.5s;
      z-index: 100;
      display: flex;
      justify-content: center;
      align-items: center;

      &:hover {
        background-color: #eee;
        color: #555;
      }
    }
  }

  .carousel-time {
    position: absolute;
    z-index: 1000;
    width: 0%;
    height: 3px;
    background-color: black;
    left: 0;
    top: 0;
  }

  @keyframes showContent {
    to {
      opacity: 1;
      filter: blur(0);
      transform: translateY(0);
    }
  }

  @keyframes showImage {
    to {
      width: 100%;
      height: 100%;
      left: 0;
      bottom: 0;
      border-radius: 0;
    }
  }

  @keyframes showThumbnail {
    to {
      width: 150px;
    }
  }

  @keyframes transformThumbnail {
    to {
      transform: translateX(0);
    }
  }

  @keyframes outImage {
    to {
      width: 150px;
      height: 220px;
      border-radius: 20px;
      left: 50%;
      bottom: 50px;
    }
  }

  @keyframes contentOut {
    to {
      transform: translate(-150px);
      filter: blur(20px);
      opacity: 0;
    }
  }

  @keyframes timeRunning {
    to {
      width: 0;
    }
  }

  @keyframes runningTime {
    from {
      width: 100%;
    }
    to {
      width: 0;
    }
  }
</style>
